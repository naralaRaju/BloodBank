@model bbmscore.Models.ViewModel.LoginRequest
@{
}
<div class="container mx-auto">
    <div class="row justify-content-center">
        <div class="col-md-4">
        <div class="card  shadow-lg mt-4">
            
                <div class="card-header bg-primary text-white ">
                    <h3 class="h4">Login</h3>
                </div>
                <form method="post">

                    <div class="card-body">
                        <div class="form-floating mb-3">

                            <input type="text" id="username" class="form-control" asp-for="Username"  />
                            <span asp-validation-for="Username" class="text-danger"></span>
                            <label for="username" class="form-label">UserName</label>

                        </div>

                        <div class="form-floating mb-3">

                            <input type="password" id="password" class="form-control" asp-for="Password" />
                            <span asp-validation-for="Password" class="text-danger"></span>
                            <label for="password" class="form-label">Password</label>

                        </div>
                        <div class="form-check mb-3">
                            <input type="checkbox" id="checking" />
                            <label for="" checking" class="form-check-label">Remember me</label>
                        </div>
                        <div class="d-grid">
                            <button type="submit" class="btn btn-success">
                                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-box-arrow-in-right" viewBox="0 0 16 16">
                                    <path fill-rule="evenodd" d="M6 3.5a.5.5 0 0 1 .5-.5h8a.5.5 0 0 1 .5.5v9a.5.5 0 0 1-.5.5h-8a.5.5 0 0 1-.5-.5v-2a.5.5 0 0 0-1 0v2A1.5 1.5 0 0 0 6.5 14h8a1.5 1.5 0 0 0 1.5-1.5v-9A1.5 1.5 0 0 0 14.5 2h-8A1.5 1.5 0 0 0 5 3.5v2a.5.5 0 0 0 1 0z" />
                                    <path fill-rule="evenodd" d="M11.854 8.354a.5.5 0 0 0 0-.708l-3-3a.5.5 0 1 0-.708.708L10.293 7.5H1.5a.5.5 0 0 0 0 1h8.793l-2.147 2.146a.5.5 0 0 0 .708.708z" />
                                </svg>Login to Continue
                            </button>
                        </div>
                    </div>
            

            </form>
           </div>

               
        </div>
    </div>
</div>
@section Scripts{
    <partial name="_ValidationScriptsPartial" />
}
