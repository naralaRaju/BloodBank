@model List<bbmscore.Models.Domine.Donor>
@{
}
<div class="container-fluid">
    <table class="table table-hover">
        <thead >
            <tr class="bg-black text-white">
                <th>Name</th>
                <th>Organization</th>
                <th>Age</th>
                <th>Blood Type</th>
                <th>Date</th>
                <th>    </th>
            </tr>
        </thead>
        <tbody>
            @foreach(var item in Model)
            {
              <tr>
                  <td>@item.Name</td>
                  <td>@item.Organization</td>
                  <td>@item.age</td>
                  <td>@item.bloodtype</td>
                  <td>@item.date</td>
                  <td><a class="btn btn-success" asp-action="DonateAgain" asp-controller="BloodBank" asp-route-id="@item.id">DonateAgain</a></td>
              </tr>  
            }
        </tbody>
    </table>
</div>
<a class="text-decoration-none btn btn-dark mt-3" asp-action="Index" asp-controller="BloodBank">Back</a>
