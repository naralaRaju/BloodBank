@model bbmscore.Models.ViewModel.PatientRequest
@{
}

<div class="container-fluid mt-5">
    <div class="row text-center">
        <div asp-validation-summary="All" class="text-danger"></div>
    </div>
    <form method="post">

    <div class="row ">
        <div class="col-md-5 mb-3">
            <label class="form-label">Patiet Name</label>
            <input type="text" class="form-control" asp-for="Name"  />
        </div>
        <div class="col-md-3 mb-3">
            <label class="form-label">Age</label>
            <input type="text" class="form-control" asp-for="age" />
        </div>
        <div class="col-md-3 mb-3">
            <label for="datalist" class="form-label">Gender</label>

            <select  id="datalist" class="form-control" asp-for="Gender" />

            <option selected>select</option>
            <option value="Male">Male</option>
            <option value="Female">Female</option>
            <option value="Others">Others</option>
           
           </select>

        </div>
        <div class="col-md-3 mb-3">
            <label for="datalist" class="form-label">BloodType</label>
                <select id="datalist" class="form-control" asp-for="bloodtype" />
            
                <option selected>select</option>
                <option value="A+">A+</option>
                <option value="A-">A-</option>
                <option value="AB+">AB+</option>
                <option value="AB-">AB-</option>
                <option value="O+">O+</option>
                <option value="O-">O-</option>
           </select>
           
        </div>
        <div class="col-md-3 mb-3">
            <label class="form-label">Phone</label>
            <input type="tel" class="form-control" asp-for="Phone" />
        </div>
        <div class="col-md-4 mb-3">
            <label class="form-label">Hospital Name</label>
            <input type="text" class="form-control" asp-for="hospital"/>
        </div>
        <div class="col-md-3 mb-3">
            <label class="form-label">Date</label>
            <input type="datetime-local" class="form-control" placeholder="date to need blood" asp-for="date" />
        </div>
        <div class="col-md-6">
            <label class="form-label">Address</label>
           <input type"text" class="form-control" asp-for="Area">
        </div>
        <div class="col-md-4">
           <button type="submit" class="btn btn-primary mt-3 ">Submit</button>
           <a class="text-decoration-none btn btn-dark mt-3" asp-action="Index" asp-controller="Home">Back</a>
               
        </div>
    </div>
   
   </form>

</div>
@section Scripts{
    <partial name="_ValidationScriptsPartial" />
}
