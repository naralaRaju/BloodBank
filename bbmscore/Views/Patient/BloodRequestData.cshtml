                    </div>
                    <div class="col-md-3">
                        <a asp-action="Wait" asp-controller="Patient" asp-route-requestid="@Model.PendingRequest.id" class="btn btn-primary ">WaitList</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
}
else if (Model.receivedData != null)
{
    <div class="container-fluid">
        <div class="row justify-content-center">
            <div class="col-md-6 mb-3">
                <div class="form-floating mb-3 mt-3">
